<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 vertical-center">
      <div class="thumbnail">
        <img src="{{book.imagePath}}" alt="{{book.title}}">
        <div class="caption">
          <h2>{{book.title}}</h2>
          <p class="price">{{book.price}} VND</p>
          <p>{{book.description}}</p>
        </div>
      </div>
    </div>
  </div>
</div>