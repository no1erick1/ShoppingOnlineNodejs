<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 vertical-center">
      <div class="thumbnail">
        <img src="{{product.imagePath}}" alt="{{product.title}}">
        <div class="caption">
          <h2>{{product.title}}</h2>
          <p class="price">{{product.price}} VND</p>
          <p>{{product.description}}</p>
        </div>
      </div>
    </div>
  </div>
</div>